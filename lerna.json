{
  "npmClient": "yarn",
  "version": "0.1.0",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "conventionalCommits": true,
      "message": "chore: publish release %s",
      "registry": "https://confluent.jfrog.io/confluent/api/npm/npm-internal/",
      "requireScripts": true,
      "verifyAccess": false,
      "verifyRegistry": false
    }
  }
}
