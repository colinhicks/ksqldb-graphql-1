{
  "npmClient": "yarn",
  "version": "0.2.0",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": "master"
    },
    "publish": {
      "access": "public",
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore: publish release %s"
    }
  }
}
