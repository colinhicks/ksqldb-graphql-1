{
  "npmClient": "yarn",
  "version": "0.1.3",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "conventionalCommits": true,
      "message": "chore: publish release %s"
    }
  }
}
